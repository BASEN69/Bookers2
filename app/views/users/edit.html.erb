<p></p>
<div class="container">
  <div class="row">
    <div class="col-6 mx-auto">
      <h1>Users info</h1>
      <% if @user.errors.any? %>
        <h2><%= @user.errors.count %> errors prohibited this obj from being saved:</h2>
        <ul>
        <% @user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
        <% end %>
        </ul>
      <% end %>
      <%= form_with model: @user do |f| %>
        <div class="form-group">
          <%= f.label :name %><br>
          <%= f.text_field :name, class: "form-control", autofocus: true, id: "inputName" %> 
        </div>
        <div class="form-group">
          <%= f.label :image %><br>
          <%= f.file_field :profile_image, class: "form-control-file", placeholder: "プロフィール画像", accept: "image/*" %> 
        </div>
        <div class="form-group">
          <%= f.label :Introduction %><br>
          <%= f.text_area :introduction, class: "form-control", autofocus: true, id: "inputIntroduction" %> 
        </div>
        <div class="form-group">
          <%= f.submit 'Update User', class: "btn btn-secondary" %>
        </div>
      <% end %>
    </div>
  </div>
</div>