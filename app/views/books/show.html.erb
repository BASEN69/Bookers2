<%= render 'list', books: @books %>
    <div class="col-md-8 offset-md-1">
      <h2>Book detail</h2>
      <table class="table table-hover">
        <tbody>
          <tr>
            <th scope="col">
              <a href="users/#{<% @book.user.id %>}/">
                <%= image_tag @book.user.get_profile_image(100,100) %>
              </a>
            </th>
            <th scope="col"><%= @book.title %></th>
            <th scope="col"><%= @book.body %></th>
            <% if @book.user == current_user %>
              <th scope="col"><%= link_to "Edit", edit_book_path, class: "btn btn-success" %></a></th>
              <th scope="col"><%=  %></th>
            <% end %>
          </tr>
        </tbody>
      </table>
    </div>

  </div>
</div>