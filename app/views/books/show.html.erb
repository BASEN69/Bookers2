<% flash.each do |message_type, message| %>
<div class="flash-message <%= message_type %>"><%= message %></div>
<% end %>
<%= render 'list', books: @books %>
    <div class="col-md-8 offset-md-1">
      <h2>Book detail</h2>
      <table class="table table-hover">
        <tbody>
          <tr>
            <th scope="col">
              <%= link_to @book.user do %>
                <%= image_tag @book.user.get_profile_image(100,100) %><br><%= @book.user.name %>
              <% end %>
            </th>
            <th scope="col"><%= link_to  @book.title , @book %></th>
            <th scope="col"><%= @book.body %></th>
            <% if @book.user == current_user %>
              <th scope="col"><%= link_to "Edit", edit_book_path, class: "btn btn-success" %></a></th>
              <th scope="col"><%= link_to "Destroy", book_path(@book), class: "btn btn-danger", method: :delete, "data-confirm" => "本当に消しますか？"  %></th>
            <% end %>
          </tr>
        </tbody>
      </table>
    </div>

  </div>
</div>