<p></p>
<div class="container">
  <% if @book.errors.any? %>
  <div>
    <h2><%= @book.errors.count %>errors prohibited this obj from being saved:</h2>
      <ul>
      <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
      <% end %>
      </ul>
  </div>
  <% end %>
  <div class="row">
    <div class="col-md-3">
      <h2>User info</h2>
      <p><%= image_tag @book.user.get_profile_image(100,100) %></p>
      <table class="table table-hover">
        <tbody>
          <tr>
            <th scope="col">name</th>
            <th scope="col"><%= @book.user.name %></th>
          </tr>
          <tr>
            <th scope="col">introduction</th>
            <th scope="col"><%= @book.user.introduction %></th>
          </tr>
        </tbody>
      </table>
      <a class="btn btn-outline-secondary btn-block" href="/users/<%= @book.user.id %>/edit"><i class="fa-solid fa-user-gear"></i></a>
      <br>
      <h1>New book</h1>
      <%= form_with model: Book.new do |f| %>
        <div class="form-group">
          <%= f.label :title %><br>
          <%= f.text_field :title, class: "form-control" %>
        </div>
        <div class="form-group">
          <p>Opinion</p>
          <%= f.text_area :body, class: "form-control" %>
        </div>
        <div class="form-group">
          <%= f.submit 'Create Book', class: "btn btn-success" %>
        </div>
      <% end %>
    </div>
    